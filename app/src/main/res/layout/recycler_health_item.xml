<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/title_health_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="Aprés 20 minutes:">
        </TextView>
        <TextView
            android:id="@+id/description_health_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            tools:text="Votre pression artérielle et votre fréquence cardiaque diminuent." />
        <TextView
            android:id="@+id/percent_health_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            tools:text="80%">
        </TextView>
        <ProgressBar
            android:id="@+id/health_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/progress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleY="2.1"
            android:max="100"
            tools:progress="80"/>
        <ProgressBar
            android:id="@+id/health_progress_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/completed"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleY="2.1"
            android:max="100"
            tools:progress="80"/>
        <TextView
            android:id="@+id/status_health_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            tools:text="Atteinte"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.cardview.widget.CardView>